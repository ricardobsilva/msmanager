<%= form_with model: @service, data: {remote: false } do |f| %>
 <div class="columns is-centered">
    <div class="column is-7">
      <div class="card">
        <header class="card-header">
          <p class="card-header-title is-centered">
            Novo Serviço
          </p>
        </header>
        <div class="card-content">
          <div class="content">
            <h5 class="title">Dados do Serviço</h5>
            <div class="field">
              <%= f.label 'Nome do Serviço', class: 'label' %>
              <%= f.text_field :name, class: 'input', required: true %>
            </div>
            <div class="field">
              <%= f.label 'Descrição', class: 'label' %>
              <%= f.text_field :description, class: 'input', required: false %>
            </div>
            <div class="field column is-5">
              <%= f.label 'Valor', class: 'label' %>
              <%= f.text_field :price, placeholder: '0.00', class: 'input', required: false%>
            </div>
          </div>
        </div>
        <footer class="card-footer">
          <div class="card-footer-item">
            <%= link_to 'Cancelar', customers_path, class: 'button is-danger is-focused is-fullwidth'%>
          </div>
          <div class="card-footer-item">
            <%= f.submit 'Salvar', class: 'button is-success is-focused is-fullwidth'%>
          </div>
        </footer>
      </div>
    </div>
  </div>
<% end %>